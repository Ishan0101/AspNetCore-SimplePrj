@model MyShop.Models.ViewModels.ModelViewModel
@using MyShop.Extensions
@{
    ViewData["Title"] = "Edit Model";
}

<h1>Edit Model Name</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input hidden asp-for="Model.Id" />
                <label asp-for="Companies" class="control-label"></label>
                <select asp-for="Model.CompanyId" asp-items="Model.Companies.ToSelectListItem()" class="form-control"></select>
                <label asp-for="Model.Name" class="control-label"></label>
                <input asp-for="Model.Name" class="form-control" />
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

